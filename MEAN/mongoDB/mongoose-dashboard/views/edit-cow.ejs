<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <% if (cow) { %>
            <title>edit <%= cow.name %></title>
        <% } %>
    </head>
    <body>
        <% if (cow) { %>
        
            <h2>Edit <%= cow.name %>!</h2>


            <form action="/cows/<%= cow._id %>" method="post">

                <input type="text" name="name" value="<%= cow.name %>">
                <input type="text" name="color" value="<%= cow.color %>">
                <input type="text" name="race" value="<%= cow.race %>">
                <input type="text" name="age" value="<%= cow.age %>">
                <input type="text" name="currentFarm" value="<%= cow.currentFarm %>">

                <input type="submit" value="sUmBiT">
            
            </form>


            <a href="/cows/<%= cow._id %>">View this cow</a>

            <form action="/cows/destroy/<%= cow._id %>" method="post">
                <!-- hidden input passing cows id? -->
                <input type="submit" value="delete this cow">
            </form>
        
        <% } %>        
        <a href="/">Back to Dashboard</a>  
    </body>
</html>